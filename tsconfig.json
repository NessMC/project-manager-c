{
  "compilerOptions": {
    "rootDirs": [
      "src/"
    ],
    "outDir": "./dist",
    "target": "es5",
    "module": "CommonJS",
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "commands/*": [
        "./src/commands/*"
      ],
      "core/*": [
        "./src/core/*"
      ],
      "libs/*": [
        "./src/libs/*"
      ],
      "template/*": [
        "./src/template/*"
      ],
      "typings/*": [
        "./src/typings/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "files": [
    "src/main.ts"
  ]
}